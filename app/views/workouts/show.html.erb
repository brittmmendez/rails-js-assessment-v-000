<div class="container-fluid text-center">
  <h2 class="workoutName"> <%=@workout.name %> </h2>
  <p> Added by: <%= link_to @workout.user.email, user_path(@workout.user), :class => "userName"%> </p>
  <p class="updated"> <%= last_updated @workout %></p> <!--not sure how to update this yet!-->
</div>

<%= render 'action_options' %><!--not sure how to update this yet!-->

<div class="container-fluid text-center">
<a href="#" class="js-back previous shift" data-id="<%=@workout.id%>"> &laquo; Previous</a>
<a href="#" class="js-next next shift" data-id="<%=@workout.id%>">Next &raquo;</a>
</div>

<div class="embed-responsive embed-responsive-16by9">
  <iframe class="vid embed-responsive-item" src="<%=@workout.website %>" allowfullscreen></iframe>
</div>

<table style="width:100%"%>
  <tr>
      Website: <a href="<%=@workout.website %>" class="website" target="_blank" ><%=@workout.website %></a>
  </tr>
  <tr>
    <td> Duration: <span class="duration"> <%=@workout.duration%></span> </td>
    <td> Training Type: <span class="training"> <%=@workout.training_type_name %> </span> </td>
  </tr>
  <tr>
    <td> Difficulty: <span class="difficulty"> <%=@workout.difficulty %> </span> </td>
    <td> Body Focus: <span class="focus"> <%=@workout.category.name %> </span></td>
  </tr>
  <tr>
    <td> Equipment: <span class= "equipment"> <%= @workout.equipments.map{|e| e.name}.join(",")%> </span> </td>
  </tr>

</table>

<h4>Add a Review:</h4>
   <%= form_for @comment, url: workout_comments_path(@workout) do |f| %>
     <%= f.text_area :content, class: 'commentBox' %><br>
     <button type="submit" class="btn btn-sm btn-primary">Create Comment</button>
   <% end %><br>


   <!--Not sure how to get this to load comments for new workout after I use the next or back buttons seems event listener isn't picking it up-->
<%= link_to "Workout Reviews", workout_comments_path(@workout, @comment), :class => "load_comments" %>

<%= link_to "Filter", workout_comments_path(@workout, @comment), :class => "filter" %>

<div class= "comments" >
  <ol>
  </ol>
</div>
